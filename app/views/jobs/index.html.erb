<html>
  <head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
  </head>
  <body>
    <nav class="navbar is-black" role="navigation" aria-label="main navigation">
      <div class="container">
        <div class="navbar-brand">
          <div class="navbar-item">
            <span class="title is-4 has-text-white">JOBS</span>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <span class="title is-4 has-text-white">Logged in Username</span>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="columns">
        <div class="column has-text-centered">
          <h1 class="title is-1">
            Search for jobs
          </h1>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <%= form_with url: "/search", method: :get do |form| %>
          <%# <form class="form"> %>
            <div class="field">
              <div class="control">
                <input class="input" type="text" placeholder="Text input">
              </div>
            </div>
            <div class="field is-grouped">
              <div class="control">
                <button class="button is-link">Search</button>
              </div>
            </div>
          <%# </form> %>
          <% end %>
        </div>
      </div>


      <div class="container">
        <div class="columns">
          <div class="column">
            <div class="box">
              <article class="media">
                <div class="media-left">
                  <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                  </figure>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                    <strong>Software engineer (m/f)</strong> <small>Company name</small> | <small>Posted 10 days ago</small>
                    </p>
                  </div>
                  <nav class="level is-mobile">
                    <div class="level-left">
                      <small class="level-item has-text-danger">3 down-votes</small>
                      <small class="level-item">|</small>
                      <small class="level-item has-text-success">2 up-votes</small>
                      <small class="level-item">by username1, username2, username3 and 10 more users</small>
                    </div>
                    <div class="level-right">
                      <a class="level-item button is-small is-success" aria-label="upvote">
                        Up-vote
                      </a>
                      <a class="level-item button is-small is-danger" aria-label="upvote">
                        down-vote
                      </a>
                    </div>
                  </nav>
                </div>
              </article>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
